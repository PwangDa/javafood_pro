<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.javafood">

	<select id="viewcomment" resultType="commentDTO">
		SELECT * FROM comment_com
	</select>
	
	<select id="viewcomment1" resultType="commentDTO">
		SELECT * FROM comment_com
	</select>
	
	<!-- 인기차트 -->
	<select id="chart" resultType="chartDTO" parameterType="String">
		<![CDATA[
			SELECT * FROM ( 
				SELECT rownum num, genre.* FROM 
					( SELECT RANK() OVER (ORDER BY FAMOUS DESC) 
						AS RANKING, a.* FROM ( SELECT (HITS *1) + (LIKES * 1.5) 
							AS FAMOUS, s.*  FROM Genre s ) a ) genre WHERE country =?)
			WHERE num >=? AND num <=? 
		]]>
		<foreach item="not" collection="list" open="(" separator="," close=")">
			#{not}
		</foreach>
	</select>

	<!-- 장르별-->
	<select id="genre" resultType="genreDTO">
		SELECT * FROM Genre;
	</select>
	
	<!-- 최신 TOP100-->
	<select id="song" resultType="genreDTO">
		SELECT * FROM song1;
	</select>
</mapper>